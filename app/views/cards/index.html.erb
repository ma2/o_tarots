<h1><%= @tarot.name %> カード一覧</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>#</th>
    <th>カード名</th>
    <th>意味・キーワード</th>
    <th>追加テキスト</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @cards.each do |card| %>
      <tr>
        <td><%= card.number %></td>
        <td><%= card.name %></td>
        <td><%= card.text %></td>
        <td><%= card.description %></td>
        <td><%= link_to '編集', edit_tarot_card_path(@tarot, card) %> |
          <%= link_to '削除', tarot_card_path(@tarot, card), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'カードデータをアップロード', upload_tarot_cards_path(@tarot) %>
