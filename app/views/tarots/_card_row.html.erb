<div class="panel panel-default" style="display: none">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @card.roman %> <%= @card.name %> <small><%= @card.tarot.name %></small></h3>
  </div>
  <div class="panel-body">
    <%= @card.text %>
  </div>
  <% if @card.description.present? %>
      <div class="panel-footer"><%= @card.description %></div>
  <% end %>
</div>